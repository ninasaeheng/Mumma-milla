<script>
  var videoContainers = document.querySelectorAll(".video-slider");
  videoContainers.forEach(videoContainer => {
  var playButtons = videoContainer.querySelectorAll('.play-button');
    playButtons.forEach(playButton => {
      playButton.addEventListener('click', function() {
        this.classList.toggle('play');
        var video = this.closest('.video-item').querySelector('video');

        if (this.classList.contains('play')) {
          video.play();
        } else {
          video.pause();
        }
      });
    });
  });
</script>

{% schema %}
{
  "name": "Video Cards Slider",
  "class": "section video-slider-sec",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 52
    }
  ],
  "blocks": [
    {
      "type": "video",
      "name": "Video",
      "settings": [
        {
          "type": "url",
          "id": "sec_video_url",
          "info": "Upload video in shopify content and paste link here.",
          "label": "Video Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Video cards Slider"
    }
  ]
}
{% endschema %}
